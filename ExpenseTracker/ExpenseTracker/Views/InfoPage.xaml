<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ExpenseTracker.Converters"
             mc:Ignorable="d"
             x:Class="ExpenseTracker.Views.InfoPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ValutaConverter x:Key="Valuta" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding Balance, Converter={StaticResource Valuta}}" />
        <ToolbarItem Text="{Binding Expenses, Converter={StaticResource Valuta}}" />
        <ToolbarItem Text="{Binding Income, Converter={StaticResource Valuta}}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout >
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="FillAndExpand"
                         Margin="15">
                <Picker x:Name="PickerMonth" 
                        Title="Month"  
                        HorizontalOptions="FillAndExpand"
                        ItemsSource="{Binding Months}" 
                        SelectedItem="{Binding Month, Mode=TwoWay}">
                </Picker>
                <Picker x:Name="PickerYear"
                        Title="Year"
                        HorizontalOptions="FillAndExpand"
                        ItemsSource="{Binding Years}"
                        SelectedItem="{Binding Year, Mode=TwoWay}"/>
                <Button x:Name="ButtonFilter" 
                        Text="Filter" 
                        Clicked="ButtonFilter_Clicked"></Button>
            </StackLayout>
            <CollectionView x:Name="CollectionViewCategoryInfos"
                            ItemsSource="{Binding CategoryInfos}"
                            VerticalScrollBarVisibility="Always">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame  BackgroundColor="Transparent">
                        <Frame CornerRadius="15" HasShadow="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="8*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0"
                                   Grid.Row="0"
                               VerticalOptions="Center"
                               Aspect="AspectFit"
                               HeightRequest="60"
                               WidthRequest="60"
                               Source="{Binding ImageUrl}"/>

                            <Label Text="{Binding TransactionType}"
                                   Grid.Column="1"
                                   Grid.Row="0"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="Large"
                                   FontAttributes="Bold"/>

                            <Label Text="{Binding Amount, Converter={StaticResource Valuta}}"
                               Grid.Column="2"
                               HorizontalOptions="Center"
                               Grid.Row="0"
                               VerticalOptions="Center"
                               FontSize="Large"
                               FontAttributes="Bold" 
                               TextColor="{Binding TextColor}"
                              />
                        </Grid>
                            </Frame>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>