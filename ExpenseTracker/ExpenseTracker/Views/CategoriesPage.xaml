<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExpenseTracker.Views.CategoriesPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="FillAndExpand"
                             Margin="15,15,15,0">
                    <Picker x:Name="PickerMonth"
                            Title="Month"
                            HorizontalOptions="FillAndExpand"
                            ItemsSource="{Binding Months}"
                            SelectedItem="{Binding Month, Mode=TwoWay}"
                            SelectedIndexChanged="FilterData">
                    </Picker>
                    <Picker x:Name="PickerYear"
                            Title="Year"
                            HorizontalOptions="FillAndExpand"
                            ItemsSource="{Binding Years}"
                            SelectedItem="{Binding Year, Mode=TwoWay}"
                            SelectedIndexChanged="FilterData" />
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="CenterAndExpand"
                             Margin="15">
                    <Label Text="Balance:"
                           FontAttributes="Bold" />
                    <Label Text="{Binding Balance, Converter={StaticResource Valuta}}"
                           FontAttributes="Bold" />
                    <Label Text="|"
                           FontAttributes="Bold" />
                    <Label Text="Out:"
                           FontAttributes="Bold" />
                    <Label Text="{Binding Expenses, Converter={StaticResource Valuta}}"
                           TextColor="IndianRed"
                           FontAttributes="Bold" />
                    <Label Text="|"
                           FontAttributes="Bold" />
                    <Label Text="In:"
                           FontAttributes="Bold" />
                    <Label Text="{Binding Income, Converter={StaticResource Valuta}}"
                           TextColor="Green"
                           FontAttributes="Bold" />
                </StackLayout>
                <CollectionView x:Name="CollectionViewCategoryInfos"
                                ItemsSource="{Binding CategoryInfos}"
                                VerticalScrollBarVisibility="Always">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="Transparent">
                                <StackLayout Orientation="Vertical">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="9*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Image Grid.Column="0"
                                               Grid.Row="0"
                                               VerticalOptions="Center"
                                               Aspect="AspectFit"
                                               HeightRequest="60"
                                               WidthRequest="60"
                                               Source="{Binding ImageUrl}" />

                                        <Label Grid.Column="1"
                                               Grid.Row="0"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Text="{Binding TransactionType}"
                                               FontSize="Medium"
                                               FontAttributes="Bold" />

                                        <Label Grid.Column="2"
                                               Grid.Row="0"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Text="{Binding Amount, Converter={StaticResource Valuta}}"
                                               FontAttributes="Bold"
                                               TextColor="{Binding TextColor}" />
                                    </Grid>
                                    <BoxView   VerticalOptions="Center"
                                               HorizontalOptions="FillAndExpand"
                                               HeightRequest="1.5"
                                               Color="#734b6d"></BoxView>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>